'-- FPS Globals
Global FPS, FPSCounter, FPSMillisecs
Global BgImage:Image
Global canv:Canvas 	


'-- Main Function
Function Main()
	New TestApp()
End Function

'-- GUI Test App Runtime Methods
Class TestApp Extends App

	Method OnCreate()
		SetUpdateRate(60)
		BgImage = Image.Load("Bg.png",0,0) 
		FPS = 60
		FPSCounter = 0
		FPSMillisecs = Millisecs()+1000
		canv=New Canvas()
		Gui.SetCanvas(canv)

		SetupTestElements()
		SetupGame()
		
	End Method
	
	Method OnUpdate()
		GetFPS()
		UpdateGameGui()
		Gui.Update()
		UpdateTestElements()
	End Method
	
	Method OnRender()
		canv.Clear(0.9,0.9, 0.9)
		canv.SetColor(1,1,1)
		Gui.Draw()
		canv.Flush()
	End Method
End Class

Function GetFPS:Void()
	FPSCounter = FPSCounter + 1
	If Millisecs() < FPSMillisecs Then Return
	FPS = FPSCounter
	FPSCounter = 0
	FPSMillisecs = Millisecs()+1000
End Function

